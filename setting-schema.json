{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "window":{
            "title": "window",
            "properties": {
                "FramelessWindow": {
                    "title": "Frameless Window",
                    "type": "boolean",
                    "default" : true,
                    "description": "There are some problem on KWin. If your WM is KWin, please turn off."
                    },
                "language": {
                    "title": "language",
                    "type": "string",
                    "default" : "system",
                    "description": "Select your language. If the value is system, set to the system language"
                    }
                }
            }
        },
    "additionalProperties": false,
    "required": [
        "$schema",
        "SystemResize"
    ]
}